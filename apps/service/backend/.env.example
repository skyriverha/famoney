# ===========================================
# FaMoney Backend Environment Variables
# ===========================================
# Copy this file to .env for development:
#   cp .env.example .env
# ===========================================

# Server Configuration
# --------------------
SERVER_PORT=8080

# Active Profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (Production)
# ------------------------------------
# Only needed when SPRING_PROFILES_ACTIVE=prod
# Development uses H2 in-memory database
#
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=famoney
# DB_USERNAME=famoney_user
# DB_PASSWORD=your_secure_password_here

# JWT Configuration
# -----------------
# IMPORTANT: In production, use a strong 256-bit secret key
# Generate one with: openssl rand -base64 32
JWT_SECRET=dev-secret-key-minimum-256-bits-for-hs256-algorithm

# Access token expiration in milliseconds (default: 1 hour)
JWT_ACCESS_TOKEN_EXPIRATION=3600000

# Refresh token expiration in milliseconds (default: 7 days)
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Logging Configuration
# ---------------------
# Log levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG
